<div class="title_user">
  <h1 style='text-align="center"'><%= @article.title %></h1>
</div>

<div style="padding: 10px; border: 1px solid #ddd; margin: 10px; border-radius: 5px;">
  <div class="content">
    Content
  </div>
  <div class="content_user">
    <%= @article.content %>
  </div>
  <div style="padding: 20px"></div>
  <div class="username">
    Username
  </div>
  <div class="username_user">
    <%= @article.user.username %>
  </div>
  <div style="padding: 20px"></div>
  <%= link_to "Edit", edit_article_path(@article) %>
</div>

<%= form_tag "/articles/#{@article.id}", method: "post" do %>
 
  <p><input type="hidden" name="article" value ="<%= @article.id %>"/></p>
  <p><input type="hidden" name="user" value ="<%= @current_user.id %>"/></p>
  <p><input type="text" name="content"/></p>
  <input type="submit" value="Nouveau commentaire" />
 
<%end%>

<h2 style='text-align="center"'>Commentaires</h2>
<% for comment in @article.comments %>
  <div style="padding: 10px; border: 1px solid #ddd; margin: 10px; border-radius: 5px;">
    <h4><%= comment.user.username %></h4>
    <%= comment.content %>
  </div>
<% end %>