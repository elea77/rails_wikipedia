<%= link_to "New article", new_article_path %>
<% if @articles %>
    <% for article in @articles %>
    <div style="padding: 10px; border: 1px solid #ddd; margin: 10px; border-radius: 5px;">
        <div class="">
        Title
        </div>
        <div class="">
        <%= article.title %>
        </div>
        <div class="">
        Content
        </div>
        <div class="">
        <%= article.content %>
        </div>
        <div style="padding: 20px"></div>
        <div class="">
        Username
        </div>
        <div class="">
        <%= article.user.username %>
        </div>
        <div style="padding: 20px"></div>
        <div style="padding: 20px"></div>
        <%= link_to "Edit", edit_article_path(article) %>
        <% if article.user == @current_user %>
        <%= link_to "Delete", delete_article_path(article), method: :delete %>
        <% end %>
    </div>
    <% end %>
<% end %>