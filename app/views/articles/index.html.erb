<h1>Articles</h1>
<%= link_to "Ã‰crire un article", new_article_path, class: 'btn btn-primary' %>
<% if @articles %>
    <% for article in @articles %>
    <div style="padding: 10px; border: 1px solid #ddd; margin: 10px; border-radius: 5px;">
        <div class="title_article">
        <h5><%= article.title %></h5>
        </div>
        <div class="content_article">
        <%= article.content %>
        <%= article.published %>
        </div>
        <div style="padding: 20px"></div>
        <div class="username_article">
        <b>Auteur : </b><%= article.user.username %>
        </div>
        <div style="padding: 10px"></div>
        <%= link_to "Voir", article_path(article), class: 'text-success' %>
        <%= link_to "Modifier", edit_article_path(article), class: 'text-primary' %>
        <% if article.user == @current_user %>
        <%= link_to "Supprimer", delete_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
        <% end %>
    </div>
    <% end %>
<% end %>