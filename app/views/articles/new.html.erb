<%= form_for @article do |f| %>
  

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :published %>
    <%= f.check_box :published %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>

  <%= link_to 'Back', articles_path %>

<% end %>