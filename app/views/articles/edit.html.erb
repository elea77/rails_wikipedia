<%= notice %>
<%= form_for @article do |f| %>
  <div> 
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <% if @article.user_id ==@current_user.id %>
    <div>
      <%= f.label :published %>
      <%= f.check_box :published %>
    </div>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
<% end %>